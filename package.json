    "update:package.json": "ts-node scripts/update-package-json.ts"
  },
  "devDependencies": {
    "@types/node": "^10.12.12",
    "lerna": "^3.4.3",
    "typescript": "^3.1.6",
    "ts-node": "^7.0.1"
  }
}
